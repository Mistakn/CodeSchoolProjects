@using MyOnlinePetStoreWeb.Data
@model MyOnlinePetStoreWeb.Models.ViewModels.OrdersEditVM
@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
}

<h1>Edit</h1>

<h4>Order</h4>
<hr />
<div class="row mb-3">
    <div class="col-md-4">
        <form method="post" asp-action="Edit" asp-controller="Orders">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Order.OrderID" />

            <div class="form-group">
                <label asp-for="Order.OrderPlaced" class="control-label"></label>
                <input asp-for="Order.OrderPlaced" class="form-control" readonly />
                <span asp-validation-for="Order.OrderPlaced" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.OrderFulfilled" class="control-label"></label>
                <input asp-for="Order.OrderFulfilled" class="form-control" readonly />
                <span asp-validation-for="Order.OrderFulfilled" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.Status" class="control-label"></label>
                @*<input asp-for="Order.Status" class="form-control" />*@
                <select asp-for="Order.Status" asp-items="Html.GetEnumSelectList<OrderStatusesEnum>()" class="form-control">
                </select>
                <span asp-validation-for="Order.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.CustomerID" class="control-label"></label>
                <select asp-for="Order.CustomerID" class="form-control" asp-items="ViewBag.CustomerID" readonly></select>
                <span asp-validation-for="Order.CustomerID" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
